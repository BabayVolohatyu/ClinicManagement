@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Facilities.Cabinet>

@{
    ViewData["Title"] = "Cabinets";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "Id";
    
    
    ViewData["SortAscending"] = sortAscending;
    ViewData["CurrentSortBy"] = currentSortBy;
    ViewData["PageSize"] = Model.PageSize;
    ViewData["SearchTerm"] = Model.SearchTerm;
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Cabinets</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "cabinets";
            ViewData["EntityNameSingular"] = "cabinet";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    @{
                                        ViewData["SortBy"] = "Id";
                                        ViewData["DisplayText"] = "ID";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Building";
                                        ViewData["DisplayText"] = "Building";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Floor";
                                        ViewData["DisplayText"] = "Floor";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Number";
                                        ViewData["DisplayText"] = "Number";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Type.Type";
                                        ViewData["DisplayText"] = "Type";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = item.Id })">
                                        <td>@item.Id</td>
                                        <td>@item.Building</td>
                                        <td>@item.Floor</td>
                                        <td>@item.Number</td>
                                        <td>
                                            @if (item.Type != null)
                                            {
                                                <a href="@Url.Action("Entity", "CabinetType", new { id = item.Type.Id })" 
                                                   class="text-decoration-none" 
                                                   onclick="event.stopPropagation()">
                                                    @item.Type.Type
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No type</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>