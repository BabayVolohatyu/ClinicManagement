@model ClinicManagement.Models.Facilities.Cabinet

@{
    ViewData["Title"] = "Cabinet Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Cabinet Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>
                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Building</th>
                                    <td>
                                        <input asp-for="Building" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Building" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Floor</th>
                                    <td>
                                        <input asp-for="Floor" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Floor" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Number</th>
                                    <td>
                                        <input asp-for="Number" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Number" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr onclick="makeEditableType(this)" style="cursor: pointer;">
                                    <th>Cabinet Type</th>
                                    <td>
                                        <select asp-for="TypeId" class="form-control-plaintext" readonly asp-items="ViewBag.CabinetTypes">
                                            <option value="">-- Select Cabinet Type --</option>
                                        </select>
                                        <span asp-validation-for="TypeId" class="text-danger"></span>
                                        <div class="text-muted mt-1">
                                            <small>Can't find the type? <a asp-action="Create" asp-controller="CabinetType">Create a new cabinet type</a></small>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    @await Html.PartialAsync("Entity/_EntityFormButtons", ViewData)
                </form>

                @await Html.PartialAsync("Entity/_EntityDeleteForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        ViewData["EntityNameSingular"] = "cabinet";
        ViewData["DeleteMessage"] = "Are you sure you want to delete this cabinet?";
    }
    <partial name="Entity/_EntityFormScripts" ViewData="ViewData" />
    <script>
        function makeEditableType(row) {
            makeEditableSelect(row);
        }

        
        document.addEventListener("DOMContentLoaded", function () {
            const typeSelect = document.querySelector("select[name='TypeId']");
            if (typeSelect) {
                
                typeSelect.setAttribute('data-initial-value', typeSelect.value);
            }
        });
    </script>
}