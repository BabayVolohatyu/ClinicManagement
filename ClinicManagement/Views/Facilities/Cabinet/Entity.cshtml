@model ClinicManagement.Models.Facilities.Cabinet

@{
    ViewData["Title"] = "Cabinet Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Cabinet Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>
                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Building</th>
                                    <td>
                                        <input asp-for="Building" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Building" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Floor</th>
                                    <td>
                                        <input asp-for="Floor" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Floor" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Number</th>
                                    <td>
                                        <input asp-for="Number" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Number" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr onclick="makeEditableType(this)" style="cursor: pointer;">
                                    <th>Cabinet Type</th>
                                    <td>
                                        <select asp-for="TypeId" class="form-control-plaintext" readonly asp-items="ViewBag.CabinetTypes">
                                            <option value="">-- Select Cabinet Type --</option>
                                        </select>
                                        <span asp-validation-for="TypeId" class="text-danger"></span>
                                        <div class="text-muted mt-1">
                                            <small>Can't find the type? <a asp-action="Create" asp-controller="CabinetType">Create a new cabinet type</a></small>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary" data-permission="read">Back</a>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success" data-permission="update">Save</button>
                            <button type="button" class="btn btn-danger" onclick="submitDelete()" data-permission="delete">Delete</button>
                        </div>
                    </div>
                </form>

                <form id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: none" data-permission="delete">
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function makeEditable(row) {
            const input = row.querySelector("input");
            if (input && input.hasAttribute("readonly")) {
                input.removeAttribute("readonly");
                input.classList.remove("form-control-plaintext");
                input.classList.add("form-control");
            }
        }

        function makeEditableType(row) {
            const select = row.querySelector("select");
            if (select && select.hasAttribute("readonly")) {
                select.removeAttribute("readonly");
                select.classList.remove("form-control-plaintext");
                select.classList.add("form-control");
            }
        }

        function submitDelete() {
            if (confirm('Are you sure you want to delete this cabinet?')) {
                document.getElementById('deleteForm').submit();
            }
        }

        // Initialize - make sure the correct cabinet type is selected
        document.addEventListener("DOMContentLoaded", function () {
            const typeSelect = document.querySelector("select[name='TypeId']");
            if (typeSelect) {
                // The selected value should already be set by ASP.NET, but we ensure it's readable
                typeSelect.setAttribute('data-initial-value', typeSelect.value);
            }
        });
    </script>
}