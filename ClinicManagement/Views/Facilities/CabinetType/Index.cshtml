@model IEnumerable<ClinicManagement.Models.Facilities.CabinetType>

@{
    ViewData["Title"] = "Cabinet Types";
}

<h2>Cabinet Types</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ Add New Type</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Type</td>
                <td>
                    <a asp-action="Entity" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
