@model ClinicManagement.Models.Health.Procedure

@{
    ViewData["Title"] = "Procedure Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Procedure Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Name</th>
                                    <td>
                                        <input asp-for="Name" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Description</th>
                                    <td>
                                        <textarea asp-for="Description" class="form-control-plaintext" readonly rows="4"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Price</th>
                                    <td>
                                        <input asp-for="Price" class="form-control-plaintext" readonly type="number" step="0.01" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    @await Html.PartialAsync("Entity/_EntityFormButtons", ViewData)
                </form>

                @await Html.PartialAsync("Entity/_EntityDeleteForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        ViewData["EntityNameSingular"] = "procedure";
        ViewData["DeleteMessage"] = "Are you sure you want to delete this procedure?";
    }
    <partial name="Entity/_EntityFormScripts" ViewData="ViewData" />
}

