@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Health.SicknessProcedure>

@{
    ViewData["Title"] = "Sickness Procedures";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "SicknessId";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Sickness Procedures</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "sickness procedures";
            ViewData["EntityNameSingular"] = "sickness procedure";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Sickness.Name",
                                            sortAscending = currentSortBy == "Sickness.Name" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Sickness
                                            @if (currentSortBy == "Sickness.Name")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Procedure.Name",
                                            sortAscending = currentSortBy == "Procedure.Name" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Procedure
                                            @if (currentSortBy == "Procedure.Name")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Sickness != null)
                                            {
                                                <a href="@Url.Action("Entity", "Sickness", new { id = item.Sickness.Id })">
                                                    @item.Sickness.Name
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Procedure != null)
                                            {
                                                <a href="@Url.Action("Entity", "Procedure", new { id = item.Procedure.Id })">
                                                    @item.Procedure.Name
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Entity", new { sicknessId = item.SicknessId, procedureId = item.ProcedureId })" class="btn btn-sm btn-info">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>

