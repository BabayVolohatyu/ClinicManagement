@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Health.SicknessTreatment>

@{
    ViewData["Title"] = "Sickness Treatments";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "SicknessId";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Sickness Treatments</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "sickness treatments";
            ViewData["EntityNameSingular"] = "sickness treatment";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    @{
                                        ViewData["CurrentSortBy"] = currentSortBy;
                                        ViewData["SortAscending"] = sortAscending;
                                        ViewData["PageSize"] = Model.PageSize;
                                        ViewData["SearchTerm"] = Model.SearchTerm;
                                        
                                        ViewData["SortBy"] = "Sickness.Name";
                                        ViewData["DisplayText"] = "Sickness";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Treatment.Name";
                                        ViewData["DisplayText"] = "Treatment";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Sickness != null)
                                            {
                                                <a href="@Url.Action("Entity", "Sickness", new { id = item.Sickness.Id })">
                                                    @item.Sickness.Name
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Treatment != null)
                                            {
                                                <a href="@Url.Action("Entity", "Treatment", new { id = item.Treatment.Id })">
                                                    @item.Treatment.Name
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Entity", new { sicknessId = item.SicknessId, treatmentId = item.TreatmentId })" class="btn btn-sm btn-info">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>

