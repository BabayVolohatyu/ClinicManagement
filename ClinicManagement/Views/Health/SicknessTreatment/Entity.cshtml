@model ClinicManagement.Models.Health.SicknessTreatment

@{
    ViewData["Title"] = "Sickness Treatment Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Sickness Treatment Details</h2>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                        <tbody>
                            <tr>
                                <th class="w-25">Sickness</th>
                                <td>
                                    @if (Model.Sickness != null)
                                    {
                                        <a href="@Url.Action("Entity", "Sickness", new { id = Model.Sickness.Id })">
                                            @Model.Sickness.Name
                                        </a>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <th>Treatment</th>
                                <td>
                                    @if (Model.Treatment != null)
                                    {
                                        <a href="@Url.Action("Entity", "Treatment", new { id = Model.Treatment.Id })">
                                            @Model.Treatment.Name
                                        </a>
                                    }
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary" data-permission="read">Back</a>

                    <form asp-action="Delete" method="post" data-permission="delete">
                        <input type="hidden" name="sicknessId" value="@Model.SicknessId" />
                        <input type="hidden" name="treatmentId" value="@Model.TreatmentId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this relationship?')">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

