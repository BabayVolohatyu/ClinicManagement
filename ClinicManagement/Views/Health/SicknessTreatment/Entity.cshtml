@model ClinicManagement.Models.Health.SicknessTreatment

@{
    ViewData["Title"] = "Sickness Treatment Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Sickness Treatment Details</h2>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                        <tbody>
                            <tr>
                                <th class="w-25">Sickness</th>
                                <td>
                                    @if (Model.Sickness != null)
                                    {
                                        <a href="@Url.Action("Entity", "Sickness", new { id = Model.Sickness.Id })">
                                            @Model.Sickness.Name
                                        </a>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <th>Treatment</th>
                                <td>
                                    @if (Model.Treatment != null)
                                    {
                                        <a href="@Url.Action("Entity", "Treatment", new { id = Model.Treatment.Id })">
                                            @Model.Treatment.Name
                                        </a>
                                    }
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                @{
                    ViewData["DeleteMessage"] = "Are you sure you want to delete this relationship?";
                    ViewData["DeleteAction"] = "Delete";
                    ViewData["DeleteRouteValues"] = new Dictionary<string, object> { { "sicknessId", Model.SicknessId }, { "treatmentId", Model.TreatmentId } };
                }
                @await Html.PartialAsync("Entity/_EntityReadOnlyButtons", Model, ViewData)
            </div>
        </div>
    </div>
</div>

