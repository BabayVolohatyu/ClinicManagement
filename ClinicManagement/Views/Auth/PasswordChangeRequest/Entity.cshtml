@model ClinicManagement.Models.Auth.PasswordChangeRequest

@{
    ViewData["Title"] = "Password Change Request Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Password Change Request Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>User</th>
                                    <td>
                                        <select asp-for="UserId" class="form-control-plaintext" readonly asp-items="ViewBag.Users">
                                            <option value="">-- Select User --</option>
                                        </select>
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Status</th>
                                    <td>
                                        <select asp-for="Status" class="form-control-plaintext" readonly asp-items="Html.GetEnumSelectList<ClinicManagement.Models.Auth.PasswordChangeStatus>()">
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr>
                                    <th>Requested At</th>
                                    <td>
                                        <input value="@Model.RequestedAt.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                @if (Model.ProcessedByAdmin != null)
                                {
                                    <tr>
                                        <th>Processed By</th>
                                        <td>
                                            <a href="@Url.Action("Entity", "User", new { id = Model.ProcessedByAdmin.Id })">
                                                @Model.ProcessedByAdmin.FirstName @(Model.ProcessedByAdmin.LastName ?? "") (@Model.ProcessedByAdmin.Email)
                                            </a>
                                        </td>
                                    </tr>
                                }

                                @if (Model.ProcessedAt.HasValue)
                                {
                                    <tr>
                                        <th>Processed At</th>
                                        <td>
                                            <input value="@Model.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control-plaintext" readonly />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary" data-permission="read">Back</a>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success" data-permission="update">Save</button>
                            <button type="button" class="btn btn-danger" onclick="submitDelete()" data-permission="delete">Delete</button>
                        </div>
                    </div>
                </form>

                <form id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: none" data-permission="delete">
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function makeEditableSelect(row) {
            const select = row.querySelector("select");
            if (select && select.hasAttribute("readonly")) {
                select.removeAttribute("readonly");
                select.classList.remove("form-control-plaintext");
                select.classList.add("form-control");
            }
        }

        function submitDelete() {
            if (confirm('Are you sure you want to delete this password change request?')) {
                document.getElementById('deleteForm').submit();
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            const userIdSelect = document.querySelector("select[name='UserId']");
            if (userIdSelect) {
                userIdSelect.setAttribute('data-initial-value', userIdSelect.value);
            }
        });
    </script>
}

