@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Auth.User>

@{
    ViewData["Title"] = "Users";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "Id";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Users</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "users";
            ViewData["EntityNameSingular"] = "user";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Id",
                                            sortAscending = currentSortBy == "Id" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            ID
                                            @if (currentSortBy == "Id")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">↕</span>
                                            }
                                        </a>
                                    </th>

                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "FirstName",
                                            sortAscending = currentSortBy == "FirstName" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            First Name
                                            @if (currentSortBy == "FirstName")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">↕</span>
                                            }
                                        </a>
                                    </th>

                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "LastName",
                                            sortAscending = currentSortBy == "LastName" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Last Name
                                            @if (currentSortBy == "LastName")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">↕</span>
                                            }
                                        </a>
                                    </th>

                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Email",
                                            sortAscending = currentSortBy == "Email" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Email
                                            @if (currentSortBy == "Email")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">↕</span>
                                            }
                                        </a>
                                    </th>

                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "RoleId",
                                            sortAscending = currentSortBy == "RoleId" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Role
                                            @if (currentSortBy == "RoleId")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">↕</span>
                                            }
                                        </a>
                                    </th>

                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "CreatedAt",
                                            sortAscending = currentSortBy == "CreatedAt" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Created At
                                            @if (currentSortBy == "CreatedAt")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">↕</span>
                                            }
                                        </a>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var user in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = user.Id })">
                                        <td>@user.Id</td>
                                        <td>@user.FirstName</td>
                                        <td>@(user.LastName ?? "-")</td>
                                        <td>@user.Email</td>
                                        <td>@(user.Role?.Name ?? "Unknown")</td>
                                        <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>

