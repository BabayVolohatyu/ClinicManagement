@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Auth.User>

@{
    ViewData["Title"] = "Users";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "Id";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Users</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "users";
            ViewData["EntityNameSingular"] = "user";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    @{
                                        ViewData["CurrentSortBy"] = currentSortBy;
                                        ViewData["SortAscending"] = sortAscending;
                                        ViewData["PageSize"] = Model.PageSize;
                                        ViewData["SearchTerm"] = Model.SearchTerm;
                                        
                                        ViewData["SortBy"] = "Id";
                                        ViewData["DisplayText"] = "ID";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "FirstName";
                                        ViewData["DisplayText"] = "First Name";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "LastName";
                                        ViewData["DisplayText"] = "Last Name";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Email";
                                        ViewData["DisplayText"] = "Email";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "RoleId";
                                        ViewData["DisplayText"] = "Role";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "CreatedAt";
                                        ViewData["DisplayText"] = "Created At";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var user in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = user.Id })">
                                        <td>@user.Id</td>
                                        <td>@user.FirstName</td>
                                        <td>@(user.LastName ?? "-")</td>
                                        <td>@user.Email</td>
                                        <td>@(user.Role?.Name ?? "Unknown")</td>
                                        <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>

