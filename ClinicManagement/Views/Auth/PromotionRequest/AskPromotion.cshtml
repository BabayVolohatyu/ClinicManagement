@model ClinicManagement.Models.Auth.PromotionRequest

@{
    ViewData["Title"] = "Request Promotion";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <h2 class="mb-4">Request Promotion</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="AskPromotion" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="RequestedRoleId" class="form-label">Requested Role</label>
                        <select asp-for="RequestedRoleId" asp-items="ViewBag.AvailableRoles" class="form-select" required>
                            <option value="">-- Select a role --</option>
                        </select>
                        <span asp-validation-for="RequestedRoleId" class="text-danger"></span>
                        @if (ViewBag.AvailableRoles != null && ((SelectList)ViewBag.AvailableRoles).Count() == 0)
                        {
                            <small class="text-muted d-block mt-1">No roles available for promotion. You may already have the highest role.</small>
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="Reason" class="form-label">Reason</label>
                        <textarea asp-for="Reason" class="form-control" rows="5" placeholder="Please provide a reason for your promotion request..." maxlength="1000"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                        <small class="text-muted">Maximum 1000 characters</small>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Note:</strong> You can only have one pending promotion request at a time. 
                        If you already have a pending request, please wait for it to be processed.
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="MyRequests" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit Request</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

