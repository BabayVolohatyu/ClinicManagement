@model ClinicManagement.Models.Auth.PromotionRequest

@{
    ViewData["Title"] = "Promotion Request Details";
}

<div class="row justify-content-center" data-permission="view_promotions_list">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Promotion Request Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="accept_promotions">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>User</th>
                                    <td>
                                        <select asp-for="UserId" class="form-control-plaintext" readonly asp-items="ViewBag.Users">
                                            <option value="">-- Select User --</option>
                                        </select>
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Requested Role</th>
                                    <td>
                                        <select asp-for="RequestedRoleId" class="form-control-plaintext" readonly asp-items="ViewBag.Roles">
                                            <option value="">-- Select Role --</option>
                                        </select>
                                        <span asp-validation-for="RequestedRoleId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Reason</th>
                                    <td>
                                        <textarea asp-for="Reason" class="form-control-plaintext" readonly rows="4"></textarea>
                                        <span asp-validation-for="Reason" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Status</th>
                                    <td>
                                        <select asp-for="Status" class="form-control-plaintext" readonly asp-items="Html.GetEnumSelectList<ClinicManagement.Models.Auth.PromotionStatus>()">
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr>
                                    <th>Requested At</th>
                                    <td>
                                        <input value="@Model.RequestedAt.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                @if (Model.ProcessedByAdmin != null)
                                {
                                    <tr>
                                        <th>Processed By</th>
                                        <td>
                                            <a href="@Url.Action("Entity", "User", new { id = Model.ProcessedByAdmin.Id })">
                                                @Model.ProcessedByAdmin.FirstName @(Model.ProcessedByAdmin.LastName ?? "") (@Model.ProcessedByAdmin.Email)
                                            </a>
                                        </td>
                                    </tr>
                                }

                                @if (Model.ProcessedAt.HasValue)
                                {
                                    <tr>
                                        <th>Processed At</th>
                                        <td>
                                            <input value="@Model.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control-plaintext" readonly />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary" data-permission="view_promotions_list">Back</a>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success" data-permission="accept_promotions">Save</button>
                            <button type="button" class="btn btn-danger" onclick="submitDelete()" data-permission="accept_promotions">Delete</button>
                        </div>
                    </div>
                </form>

                <form id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: none" data-permission="accept_promotions">
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function makeEditable(row) {
            const input = row.querySelector("input, textarea");
            if (input && input.hasAttribute("readonly")) {
                input.removeAttribute("readonly");
                input.classList.remove("form-control-plaintext");
                input.classList.add("form-control");
            }
        }

        function makeEditableSelect(row) {
            const select = row.querySelector("select");
            if (select && select.hasAttribute("readonly")) {
                select.removeAttribute("readonly");
                select.classList.remove("form-control-plaintext");
                select.classList.add("form-control");
            }
        }

        function submitDelete() {
            if (confirm('Are you sure you want to delete this promotion request?')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}

