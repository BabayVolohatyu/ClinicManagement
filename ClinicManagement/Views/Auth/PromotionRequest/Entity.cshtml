@model ClinicManagement.Models.Auth.PromotionRequest

@{
    ViewData["Title"] = "Promotion Request Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Promotion Request Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>User</th>
                                    <td>
                                        <select asp-for="UserId" class="form-control-plaintext" readonly asp-items="ViewBag.Users">
                                            <option value="">-- Select User --</option>
                                        </select>
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Requested Role</th>
                                    <td>
                                        <select asp-for="RequestedRoleId" class="form-control-plaintext" readonly asp-items="ViewBag.Roles">
                                            <option value="">-- Select Role --</option>
                                        </select>
                                        <span asp-validation-for="RequestedRoleId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Reason</th>
                                    <td>
                                        <textarea asp-for="Reason" class="form-control-plaintext" readonly rows="4"></textarea>
                                        <span asp-validation-for="Reason" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Status</th>
                                    <td>
                                        <select asp-for="Status" class="form-control-plaintext" readonly asp-items="Html.GetEnumSelectList<ClinicManagement.Models.Auth.PromotionStatus>()">
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr>
                                    <th>Requested At</th>
                                    <td>
                                        <input value="@Model.RequestedAt.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                @await Html.PartialAsync("Entity/_EntityProcessedRows", Model)
                            </tbody>
                        </table>
                    </div>

                    @await Html.PartialAsync("Entity/_EntityFormButtons", ViewData)
                </form>

                @await Html.PartialAsync("Entity/_EntityDeleteForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        ViewData["EntityNameSingular"] = "promotion request";
        ViewData["DeleteMessage"] = "Are you sure you want to delete this promotion request?";
    }
    <partial name="Entity/_EntityFormScripts" ViewData="ViewData" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const userIdSelect = document.querySelector("select[name='UserId']");
            if (userIdSelect) {
                userIdSelect.setAttribute('data-initial-value', userIdSelect.value);
            }
            const roleIdSelect = document.querySelector("select[name='RequestedRoleId']");
            if (roleIdSelect) {
                roleIdSelect.setAttribute('data-initial-value', roleIdSelect.value);
            }
        });
    </script>
}

