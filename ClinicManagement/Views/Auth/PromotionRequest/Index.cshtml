@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Auth.PromotionRequest>

@{
    ViewData["Title"] = "Promotion Requests";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "RequestedAt";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Promotion Requests</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "promotion requests";
            ViewData["EntityNameSingular"] = "promotion request";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    @{
                                        ViewData["CurrentSortBy"] = currentSortBy;
                                        ViewData["SortAscending"] = sortAscending;
                                        ViewData["PageSize"] = Model.PageSize;
                                        ViewData["SearchTerm"] = Model.SearchTerm;
                                        
                                        ViewData["SortBy"] = "Id";
                                        ViewData["DisplayText"] = "ID";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "User.Email";
                                        ViewData["DisplayText"] = "User";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "RequestedRole.Name";
                                        ViewData["DisplayText"] = "Requested Role";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Status";
                                        ViewData["DisplayText"] = "Status";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "RequestedAt";
                                        ViewData["DisplayText"] = "Requested At";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var request in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = request.Id })">
                                        <td>@request.Id</td>
                                        <td>
                                            @if (request.User != null)
                                            {
                                                <a href="@Url.Action("Entity", "User", new { id = request.User.Id })" onclick="event.stopPropagation()">
                                                    @request.User.FirstName @(request.User.LastName ?? "") (@request.User.Email)
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @(request.RequestedRole?.Name ?? "-")
                                        </td>
                                        <td>
                                            @if (request.Status == ClinicManagement.Models.Auth.PromotionStatus.Pending)
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                            else if (request.Status == ClinicManagement.Models.Auth.PromotionStatus.Approved)
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                        </td>
                                        <td>@request.RequestedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>

