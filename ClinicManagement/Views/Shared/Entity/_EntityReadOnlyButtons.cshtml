@model dynamic

@{
    var deleteMessage = ViewData["DeleteMessage"] as string ?? "Are you sure you want to delete this item?";
    var deleteAction = ViewData["DeleteAction"] as string ?? "Delete";
    var deleteRouteValues = ViewData["DeleteRouteValues"] as Dictionary<string, object> ?? new Dictionary<string, object>();
}

<div class="d-flex justify-content-between align-items-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary" data-permission="read">Back</a>

    <form asp-action="@deleteAction" method="post" data-permission="delete">
        @foreach (var kvp in deleteRouteValues)
        {
            <input type="hidden" name="@kvp.Key" value="@kvp.Value" />
        }
        <button type="submit" class="btn btn-danger" onclick="return confirm('@deleteMessage')">Delete</button>
    </form>
</div>

