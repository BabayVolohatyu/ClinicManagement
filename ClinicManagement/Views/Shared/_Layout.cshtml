@using System.IdentityModel.Tokens.Jwt
@using ClinicManagement.Models.Auth
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClinicManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClinicManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @functions {
                    private int GetRoleIdFromJwt()
                    {
                        var token = Context.Request.Cookies["jwt"];
                        if (string.IsNullOrEmpty(token))
                            return (int)RoleType.Unauthorized;

                        var handler = new JwtSecurityTokenHandler();
                        if (!handler.CanReadToken(token))
                            return (int)RoleType.Unauthorized;

                        var jwt = handler.ReadJwtToken(token);
                        var roleIdClaim = jwt.Claims.FirstOrDefault(c => c.Type == "roleId")?.Value;
                        if (int.TryParse(roleIdClaim, out int roleId))
                            return roleId;

                        return (int)RoleType.Unauthorized;
                    }
                }

                @{
                    int roleId = GetRoleIdFromJwt();

                    bool showHeader = roleId >= (int)RoleType.Guest;
                    bool showLogin = roleId == (int)RoleType.Guest;
                    bool showLogout = roleId > (int)RoleType.Guest;
                }

                @if (showHeader)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item" data-permission="read">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <!-- Facilities dropdown -->
                            <li class="nav-item dropdown" data-permission="read">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="facilitiesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Facilities
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="facilitiesDropdown">
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Cabinet" asp-action="Index">Cabinet</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="CabinetType" asp-action="Index">CabinetType</a></li>
                                </ul>
                            </li>

                            <!-- Health dropdown -->
                            <li class="nav-item dropdown" data-permission="read">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="healthDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Health
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="healthDropdown">
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Diagnosis" asp-action="Index">Diagnosis</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Procedure" asp-action="Index">Procedure</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Sickness" asp-action="Index">Sickness</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="SicknessProcedure" asp-action="Index">SicknessProcedure</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="SicknessSymptom" asp-action="Index">SicknessSymptom</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="SicknessTreatment" asp-action="Index">SicknessTreatment</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Symptom" asp-action="Index">Symptom</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Treatment" asp-action="Index">Treatment</a></li>
                                </ul>
                            </li>

                            <!-- Humans dropdown -->
                            <li class="nav-item dropdown" data-permission="read">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="humansDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Humans
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="humansDropdown">
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="DistrictDoctor" asp-action="Index">DistrictDoctor</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Doctor" asp-action="Index">Doctor</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Patient" asp-action="Index">Patient</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Person" asp-action="Index">Person</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Specialty" asp-action="Index">Specialty</a></li>
                                </ul>
                            </li>

                            <!-- Info dropdown -->
                            <li class="nav-item dropdown" data-permission="read">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="infoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Info
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="infoDropdown">
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Address" asp-action="Index">Address</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Appointment" asp-action="Index">Appointment</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="DoctorOnCallStatus" asp-action="Index">DoctorOnCallStatus</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="DoctorProcedure" asp-action="Index">DoctorProcedure</a></li>
                                    <li data-permission="read"><a class="dropdown-item" asp-controller="Schedule" asp-action="Index">Schedule</a></li>
                                </ul>
                            </li>
                        </ul>

                        <div class="d-flex">
                            @if (showLogin)
                            {
                                <a class="btn btn-outline-primary btn-sm me-2" asp-controller="Auth" asp-action="Login">Log in</a>
                            }
                            @if (showLogout)
                            {
                                <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Log out</button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth-permissions.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




