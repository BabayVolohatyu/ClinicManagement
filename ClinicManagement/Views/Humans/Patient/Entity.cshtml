@model ClinicManagement.Models.Humans.Patient

@{
    ViewData["Title"] = "Patient Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Patient Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Person</th>
                                    <td>
                                        <select asp-for="PersonId" class="form-control-plaintext" readonly asp-items="ViewBag.People">
                                            <option value="">-- Select Person --</option>
                                        </select>
                                        <span asp-validation-for="PersonId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Address</th>
                                    <td>
                                        <select asp-for="AddressId" class="form-control-plaintext" readonly asp-items="ViewBag.Addresses">
                                            <option value="">-- Select Address --</option>
                                        </select>
                                        <span asp-validation-for="AddressId" class="text-danger"></span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    @await Html.PartialAsync("Entity/_EntityFormButtons", ViewData)
                </form>

                @await Html.PartialAsync("Entity/_EntityDeleteForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        ViewData["EntityNameSingular"] = "patient";
        ViewData["DeleteMessage"] = "Are you sure you want to delete this patient?";
    }
    <partial name="Entity/_EntityFormScripts" ViewData="ViewData" />
}

