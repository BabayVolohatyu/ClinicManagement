@model ClinicManagement.Models.Humans.Specialty

@{
    ViewData["Title"] = "Create Specialty";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Create Specialty</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" data-permission="create">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    @await Html.PartialAsync("Create/_CreateFormButtons")
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
