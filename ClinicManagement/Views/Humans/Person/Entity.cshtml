@model ClinicManagement.Models.Humans.Person

@{
    ViewData["Title"] = "Person Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Person Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>First Name</th>
                                    <td>
                                        <input asp-for="FirstName" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Last Name</th>
                                    <td>
                                        <input asp-for="LastName" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Patronymic</th>
                                    <td>
                                        <input asp-for="Patronymic" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Patronymic" class="text-danger"></span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    @await Html.PartialAsync("Entity/_EntityFormButtons", ViewData)
                </form>

                @await Html.PartialAsync("Entity/_EntityDeleteForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        ViewData["EntityNameSingular"] = "person";
        ViewData["DeleteMessage"] = "Are you sure you want to delete this person?";
    }
    <partial name="Entity/_EntityFormScripts" ViewData="ViewData" />
}
