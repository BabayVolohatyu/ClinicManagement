@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Humans.Person>

@{
    ViewData["Title"] = "People";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "Id";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">People</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "people";
            ViewData["EntityNameSingular"] = "person";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    @* ID *@
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Id",
                                            sortAscending = currentSortBy == "Id" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            ID
                                            @if (currentSortBy == "Id")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>

                                    @* First Name *@
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "FirstName",
                                            sortAscending = currentSortBy == "FirstName" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            First Name
                                            @if (currentSortBy == "FirstName")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>

                                    @* Last Name *@
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "LastName",
                                            sortAscending = currentSortBy == "LastName" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Last Name
                                            @if (currentSortBy == "LastName")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>

                                    @* Patronymic *@
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Patronymic",
                                            sortAscending = currentSortBy == "Patronymic" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Patronymic
                                            @if (currentSortBy == "Patronymic")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var p in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = p.Id })">
                                        <td>@p.Id</td>
                                        <td>@p.FirstName</td>
                                        <td>@p.LastName</td>
                                        <td>@p.Patronymic</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>
