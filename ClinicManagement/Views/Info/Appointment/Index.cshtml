@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Info.Appointment>

@{
    ViewData["Title"] = "Appointments";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "StartTime";
    
    // Set ViewData for sortable headers
    ViewData["SortAscending"] = sortAscending;
    ViewData["CurrentSortBy"] = currentSortBy;
    ViewData["PageSize"] = Model.PageSize;
    ViewData["SearchTerm"] = Model.SearchTerm;
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Appointments</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "appointments";
            ViewData["EntityNameSingular"] = "appointment";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    @{
                                        ViewData["SortBy"] = "DoctorProcedure.Doctor.Person.LastName";
                                        ViewData["DisplayText"] = "Doctor";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Patient.Person.LastName";
                                        ViewData["DisplayText"] = "Patient";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "Cabinet.Building";
                                        ViewData["DisplayText"] = "Cabinet";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "StartTime";
                                        ViewData["DisplayText"] = "Start Time";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "EndTime";
                                        ViewData["DisplayText"] = "End Time";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                    
                                    @{
                                        ViewData["SortBy"] = "DidItHappen";
                                        ViewData["DisplayText"] = "Status";
                                    }
                                    @await Html.PartialAsync("Index/_IndexSortableHeader", ViewData)
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = item.Id })">
                                        <td>
                                            @if (item.DoctorProcedure != null && item.DoctorProcedure.Doctor != null && item.DoctorProcedure.Doctor.Person != null)
                                            {
                                                <a href="@Url.Action("Entity", "Doctor", new { id = item.DoctorProcedure.Doctor.Id })" onclick="event.stopPropagation()">
                                                    @item.DoctorProcedure.Doctor.Person.LastName, @item.DoctorProcedure.Doctor.Person.FirstName
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Patient != null && item.Patient.Person != null)
                                            {
                                                <a href="@Url.Action("Entity", "Patient", new { id = item.Patient.Id })" onclick="event.stopPropagation()">
                                                    @item.Patient.Person.LastName, @item.Patient.Person.FirstName
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Cabinet != null)
                                            {
                                                <a href="@Url.Action("Entity", "Cabinet", new { id = item.Cabinet.Id })" onclick="event.stopPropagation()">
                                                    Building @item.Cabinet.Building, Floor @item.Cabinet.Floor, Room @item.Cabinet.Number
                                                </a>
                                            }
                                        </td>
                                        <td>@item.StartTime.ToString("g")</td>
                                        <td>@item.EndTime.ToString("g")</td>
                                        <td>
                                            @if (item.DidItHappen)
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>


