@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Info.DoctorProcedure>

@{
    ViewData["Title"] = "Doctor Procedures";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "Id";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Doctor Procedures</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "doctor procedures";
            ViewData["EntityNameSingular"] = "doctor procedure";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Doctor.Person.LastName",
                                            sortAscending = currentSortBy == "Doctor.Person.LastName" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Doctor
                                            @if (currentSortBy == "Doctor.Person.LastName")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Procedure.Name",
                                            sortAscending = currentSortBy == "Procedure.Name" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Procedure
                                            @if (currentSortBy == "Procedure.Name")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = item.Id })">
                                        <td>
                                            @if (item.Doctor != null && item.Doctor.Person != null)
                                            {
                                                <a href="@Url.Action("Entity", "Doctor", new { id = item.Doctor.Id })" onclick="event.stopPropagation()">
                                                    @item.Doctor.Person.LastName, @item.Doctor.Person.FirstName
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Procedure != null)
                                            {
                                                <a href="@Url.Action("Entity", "Procedure", new { id = item.Procedure.Id })" onclick="event.stopPropagation()">
                                                    @item.Procedure.Name
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>


