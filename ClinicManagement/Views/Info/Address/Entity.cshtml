@model ClinicManagement.Models.Info.Address

@{
    ViewData["Title"] = "Address Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Address Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Country</th>
                                    <td>
                                        <input asp-for="Country" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>State</th>
                                    <td>
                                        <input asp-for="State" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Locality</th>
                                    <td>
                                        <input asp-for="Locality" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="Locality" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Street Name</th>
                                    <td>
                                        <input asp-for="StreetName" class="form-control-plaintext" readonly />
                                        <span asp-validation-for="StreetName" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Street Number</th>
                                    <td>
                                        <input asp-for="StreetNumber" class="form-control-plaintext" readonly type="number" />
                                        <span asp-validation-for="StreetNumber" class="text-danger"></span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    @await Html.PartialAsync("Entity/_EntityFormButtons", ViewData)
                </form>

                @await Html.PartialAsync("Entity/_EntityDeleteForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        ViewData["EntityNameSingular"] = "address";
        ViewData["DeleteMessage"] = "Are you sure you want to delete this address?";
    }
    <partial name="Entity/_EntityFormScripts" ViewData="ViewData" />
}

