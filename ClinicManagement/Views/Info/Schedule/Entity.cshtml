@model ClinicManagement.Models.Info.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Schedule Details</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.Id" method="post" id="editForm" data-permission="update">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-25">ID</th>
                                    <td>
                                        <input asp-for="Id" class="form-control-plaintext" readonly />
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Doctor</th>
                                    <td>
                                        <select asp-for="DoctorId" class="form-control-plaintext" readonly asp-items="ViewBag.Doctors">
                                            <option value="">-- Select Doctor --</option>
                                        </select>
                                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditableSelect(this)" style="cursor: pointer;">
                                    <th>Cabinet</th>
                                    <td>
                                        <select asp-for="CabinetId" class="form-control-plaintext" readonly asp-items="ViewBag.Cabinets">
                                            <option value="">-- Select Cabinet --</option>
                                        </select>
                                        <span asp-validation-for="CabinetId" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>Start Time</th>
                                    <td>
                                        <input asp-for="StartTime" class="form-control-plaintext" readonly type="datetime-local" />
                                        <span asp-validation-for="StartTime" class="text-danger"></span>
                                    </td>
                                </tr>

                                <tr onclick="makeEditable(this)" style="cursor: pointer;">
                                    <th>End Time</th>
                                    <td>
                                        <input asp-for="EndTime" class="form-control-plaintext" readonly type="datetime-local" />
                                        <span asp-validation-for="EndTime" class="text-danger"></span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    @await Html.PartialAsync("Entity/_EntityFormButtons", ViewData)
                </form>

                @await Html.PartialAsync("Entity/_EntityDeleteForm", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        ViewData["EntityNameSingular"] = "schedule";
        ViewData["DeleteMessage"] = "Are you sure you want to delete this schedule?";
    }
    <partial name="Entity/_EntityFormScripts" ViewData="ViewData" />
}

