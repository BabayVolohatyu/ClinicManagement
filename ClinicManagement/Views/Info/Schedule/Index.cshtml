@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Info.Schedule>

@{
    ViewData["Title"] = "Schedules";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "StartTime";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Schedules</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "schedules";
            ViewData["EntityNameSingular"] = "schedule";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Doctor.Person.LastName",
                                            sortAscending = currentSortBy == "Doctor.Person.LastName" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Doctor
                                            @if (currentSortBy == "Doctor.Person.LastName")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Cabinet.Building",
                                            sortAscending = currentSortBy == "Cabinet.Building" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Cabinet
                                            @if (currentSortBy == "Cabinet.Building")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "StartTime",
                                            sortAscending = currentSortBy == "StartTime" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Start Time
                                            @if (currentSortBy == "StartTime")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "EndTime",
                                            sortAscending = currentSortBy == "EndTime" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            End Time
                                            @if (currentSortBy == "EndTime")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = item.Id })">
                                        <td>
                                            @if (item.Doctor != null && item.Doctor.Person != null)
                                            {
                                                <a href="@Url.Action("Entity", "Doctor", new { id = item.Doctor.Id })" onclick="event.stopPropagation()">
                                                    @item.Doctor.Person.LastName, @item.Doctor.Person.FirstName
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Cabinet != null)
                                            {
                                                <a href="@Url.Action("Entity", "Cabinet", new { id = item.Cabinet.Id })" onclick="event.stopPropagation()">
                                                    Building @item.Cabinet.Building, Floor @item.Cabinet.Floor, Room @item.Cabinet.Number
                                                </a>
                                            }
                                        </td>
                                        <td>@item.StartTime.ToString("g")</td>
                                        <td>@item.EndTime.ToString("g")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>


