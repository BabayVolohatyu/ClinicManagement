@model ClinicManagement.Models.Info.HomeCallLog

@{
    ViewData["Title"] = "Create Home Call Log";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-6 col-md-8">
        <h2 class="mb-4">Create Home Call Log</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" data-permission="create">

                    <div class="mb-3">
                        <label asp-for="DoctorId" class="form-label">Doctor</label>
                        <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.Doctors">
                            <option value="">-- Select Doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddressId" class="form-label">Address</label>
                        <select asp-for="AddressId" class="form-control" asp-items="ViewBag.Addresses">
                            <option value="">-- Select Address --</option>
                        </select>
                        <span asp-validation-for="AddressId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateTime" class="form-label">Date Time</label>
                        <input asp-for="DateTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary" data-permission="read">Cancel</a>
                        <button type="submit" class="btn btn-success" data-permission="create">Save</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

