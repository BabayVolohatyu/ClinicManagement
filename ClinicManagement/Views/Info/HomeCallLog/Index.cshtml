@model ClinicManagement.Services.PaginatedResult<ClinicManagement.Models.Info.HomeCallLog>

@{
    ViewData["Title"] = "Home Call Logs";
    ViewData["Entity"] = ViewContext.RouteData.Values["controller"]?.ToString().ToLower();
    var sortAscending = Model.SortAscending;
    var currentSortBy = Model.SortBy ?? "DateTime";
}

<div class="row justify-content-center" data-permission="read">
    <div class="col-lg-10 col-md-12">
        <h2 class="mb-4">Home Call Logs</h2>

        @await Html.PartialAsync("Index/_IndexSearchForm", Model)

        @{
            ViewData["EntityNamePlural"] = "home call logs";
            ViewData["EntityNameSingular"] = "home call log";
        }
        @await Html.PartialAsync("Index/_IndexEmptyState", Model, ViewData)

        @if (Model.Items.Any())
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Doctor.Person.LastName",
                                            sortAscending = currentSortBy == "Doctor.Person.LastName" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Doctor
                                            @if (currentSortBy == "Doctor.Person.LastName")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "Address.Locality",
                                            sortAscending = currentSortBy == "Address.Locality" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Address
                                            @if (currentSortBy == "Address.Locality")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                    <th>
                                        <a href="@Url.Action("Index", new {
                                            pageNumber = 1,
                                            pageSize = Model.PageSize,
                                            searchTerm = Model.SearchTerm,
                                            sortBy = "DateTime",
                                            sortAscending = currentSortBy == "DateTime" ? !sortAscending : true
                                        })" class="text-decoration-none">
                                            Date Time
                                            @if (currentSortBy == "DateTime")
                                            {
                                                <span>@(sortAscending ? "↑" : "↓")</span>
                                            }
                                            else { <span class="text-muted">↕</span> }
                                        </a>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr class="clickable-row" data-href="@Url.Action("Entity", new { id = item.Id })">
                                        <td>
                                            @if (item.Doctor != null && item.Doctor.Person != null)
                                            {
                                                <a href="@Url.Action("Entity", "Doctor", new { id = item.Doctor.Id })" onclick="event.stopPropagation()">
                                                    @item.Doctor.Person.LastName, @item.Doctor.Person.FirstName
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Address != null)
                                            {
                                                <a href="@Url.Action("Entity", "Address", new { id = item.Address.Id })" onclick="event.stopPropagation()">
                                                    @item.Address.StreetName @item.Address.StreetNumber, @item.Address.Locality
                                                </a>
                                            }
                                        </td>
                                        <td>@item.DateTime.ToString("g")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("Index/_IndexPagination", Model)
        }
    </div>
</div>


