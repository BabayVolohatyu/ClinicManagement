@model Dictionary<string, ClinicManagement.Services.QueryDefinition>
@using System.IdentityModel.Tokens.Jwt
@using ClinicManagement.Models.Auth
@{
    ViewData["Title"] = "Home Page";
    
    // Check user role (same logic as _AuthButtons)
    @functions {
        private int GetRoleIdFromJwt()
        {
            var token = Context.Request.Cookies["jwt"];
            if (string.IsNullOrEmpty(token))
                return (int)RoleType.Unauthorized;

            var handler = new JwtSecurityTokenHandler();
            if (!handler.CanReadToken(token))
                return (int)RoleType.Unauthorized;

            var jwt = handler.ReadJwtToken(token);
            var roleIdClaim = jwt.Claims.FirstOrDefault(c => c.Type == "roleId")?.Value;

            if (int.TryParse(roleIdClaim, out int roleId))
                return roleId;

            return (int)RoleType.Unauthorized;
        }
    }
    int roleId = GetRoleIdFromJwt();
    bool isGuest = roleId == (int)RoleType.Guest;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 mb-3">
                <i class="bi bi-clipboard-data"></i> Clinic Management Analytics
            </h1>
            <p class="lead text-muted">Pre-defined queries for search and analytics</p>
        </div>
    </div>

    <!-- Parameter Modal -->
    <div class="modal fade" id="parameterModal" tabindex="-1" aria-labelledby="parameterModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="parameterModalLabel">
                        <i class="bi bi-input-cursor-text"></i> Enter Parameters
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="parameterForm">
                        <div id="parameterFields"></div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitParameters()">Execute Query</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Analytics Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="mb-3">
                <i class="bi bi-search"></i> Search and Analytics
            </h3>
        </div>
    </div>

    <div class="row g-4 mb-5">
        @{
            var queryConfigs = new[]
            {
                new { Key = "reception-schedule", Icon = "bi-calendar-check", Color = "primary", Title = "Reception Schedule" },
                new { Key = "doctor-details", Icon = "bi-person-badge", Color = "info", Title = "Doctor Details" },
                new { Key = "patients-per-week", Icon = "bi-people", Color = "success", Title = "Weekly Patient Count" },
                new { Key = "search-patients-lastname", Icon = "bi-person-search", Color = "warning", Title = "Search by Last Name" },
                new { Key = "search-patients-record", Icon = "bi-file-medical", Color = "danger", Title = "Search by Record Number" },
                new { Key = "search-patients-condition", Icon = "bi-heart-pulse", Color = "secondary", Title = "Search by Condition" },
                new { Key = "search-patients-doctor", Icon = "bi-person-video", Color = "primary", Title = "Search by Doctor" },
                new { Key = "patients-multiple-doctors", Icon = "bi-people-fill", Color = "info", Title = "Multiple Doctors" },
                new { Key = "angina-count", Icon = "bi-graph-up", Color = "danger", Title = "Angina Statistics" },
                new { Key = "doctor-schedule", Icon = "bi-calendar-week", Color = "success", Title = "Doctor Schedule" },
                new { Key = "doctors-by-specialty", Icon = "bi-briefcase", Color = "warning", Title = "Doctors by Specialty" },
                new { Key = "home-call-patients", Icon = "bi-house-door", Color = "secondary", Title = "Home Call Patients" },
                new { Key = "home-calls-count", Icon = "bi-telephone", Color = "primary", Title = "Home Calls Count" },
                new { Key = "procedures-total", Icon = "bi-clipboard-pulse", Color = "info", Title = "Procedures Total" },
                new { Key = "patients-with-procedures", Icon = "bi-person-check", Color = "success", Title = "Patients with Procedures" },
                new { Key = "fluorography-patients", Icon = "bi-camera", Color = "warning", Title = "Fluorography Patients" },
                new { Key = "missed-vaccination", Icon = "bi-shield-x", Color = "danger", Title = "Missed Vaccination" },
                new { Key = "physio-schedule", Icon = "bi-clock-history", Color = "secondary", Title = "Physio Room Schedule" },
                new { Key = "physio-doctors-count", Icon = "bi-building", Color = "primary", Title = "Physio Room Doctors" },
                new { Key = "visit-stats-total", Icon = "bi-bar-chart", Color = "info", Title = "Total Visits" },
                new { Key = "visit-stats-by-group", Icon = "bi-pie-chart", Color = "success", Title = "Visits by Specialty" }
            };
        }

        @foreach (var config in queryConfigs)
        {
            @if (Model.ContainsKey(config.Key))
            {
                var queryDef = Model[config.Key];
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm query-card" data-query-key="@config.Key">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="query-icon bg-@config.Color text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi @config.Icon fs-4"></i>
                                </div>
                                <h5 class="card-title mb-0">@config.Title</h5>
                            </div>
                            <p class="card-text text-muted">@queryDef.Description</p>
                            <button class="btn btn-@config.Color btn-sm w-100 execute-query-btn" data-requires-params="@queryDef.RequiresParameters.ToString().ToLower()">
                                <i class="bi bi-play-fill"></i> Execute Query
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        // Check if user is guest
        const isGuest = @Html.Raw(isGuest.ToString().ToLower());
        
        let currentQueryKey = null;
        let currentParameterLabels = [];

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.execute-query-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Check if user is guest - show message instead of executing
                    if (isGuest) {
                        alert('You must be logged in to perform this action.');
                        return;
                    }
                    
                    const card = this.closest('.query-card');
                    const queryKey = card.getAttribute('data-query-key');
                    const requiresParams = this.getAttribute('data-requires-params') === 'true';
                    
                    currentQueryKey = queryKey;
                    
                    if (requiresParams) {
                        // Get query definition to show parameter form
                        fetch(`/Home/GetQueryDefinition?queryKey=${encodeURIComponent(queryKey)}`)
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    showParameterForm(data.queryDef);
                                } else {
                                    alert('Error: ' + data.error);
                                }
                            })
                            .catch(error => {
                                alert('Error: ' + error.message);
                            });
                    } else {
                        // No parameters needed, redirect directly
                        redirectToQueryManager(queryKey, []);
                    }
                });
            });
        });

        function showParameterForm(queryDef) {
            const modal = new bootstrap.Modal(document.getElementById('parameterModal'));
            const fieldsDiv = document.getElementById('parameterFields');
            const title = document.getElementById('parameterModalLabel');
            
            title.innerHTML = `<i class="bi bi-input-cursor-text"></i> ${queryDef.name} - Enter Parameters`;
            fieldsDiv.innerHTML = '';
            
            currentParameterLabels = queryDef.parameterLabels || [];
            
            queryDef.parameterLabels.forEach((label, index) => {
                const div = document.createElement('div');
                div.className = 'mb-3';
                
                const inputLabel = document.createElement('label');
                inputLabel.className = 'form-label';
                inputLabel.textContent = label;
                inputLabel.setAttribute('for', `param-${index}`);
                
                const input = document.createElement('input');
                input.type = 'text';
                input.className = 'form-control';
                input.id = `param-${index}`;
                input.name = `param-${index}`;
                input.required = true;
                
                // Set input type based on label
                if (label.toLowerCase().includes('id') || label.toLowerCase().includes('number')) {
                    input.type = 'number';
                    input.min = '1';
                } else if (label.toLowerCase().includes('date')) {
                    input.type = 'date';
                } else if (label.toLowerCase().includes('month')) {
                    input.type = 'month';
                }
                
                div.appendChild(inputLabel);
                div.appendChild(input);
                fieldsDiv.appendChild(div);
            });
            
            modal.show();
        }

        function submitParameters() {
            // Check if user is guest - show message
            if (isGuest) {
                const modal = bootstrap.Modal.getInstance(document.getElementById('parameterModal'));
                modal.hide();
                alert('You must be logged in to perform this action.');
                return;
            }
            
            const form = document.getElementById('parameterForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const parameters = [];
            currentParameterLabels.forEach((label, index) => {
                const input = document.getElementById(`param-${index}`);
                parameters.push(input.value);
            });
            
            const modal = bootstrap.Modal.getInstance(document.getElementById('parameterModal'));
            modal.hide();
            
            // Submit form to server for redirect
            const formData = new FormData();
            formData.append('queryKey', currentQueryKey);
            parameters.forEach(param => {
                formData.append('parameters', param);
            });
            
            fetch('@Url.Action("RedirectToQueryManager", "Home")', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                } else {
                    return response.text().then(html => {
                        document.body.innerHTML = html;
                    });
                }
            })
            .catch(error => {
                alert('Error redirecting: ' + error.message);
            });
        }

        function redirectToQueryManager(queryKey, parameters) {
            // Check if user has execute_raw_queries permission
            // Authorized users don't have this permission and should go to PredefinedQueries
            const hasRawQueryPermission = hasPermission('execute_raw_queries');
            
            let url;
            if (hasRawQueryPermission) {
                url = '@Url.Action("Index", "QueryManager")?queryKey=' + encodeURIComponent(queryKey);
            } else {
                url = '@Url.Action("Index", "PredefinedQueries")?queryKey=' + encodeURIComponent(queryKey);
            }
            
            if (parameters && parameters.length > 0) {
                parameters.forEach(param => {
                    url += '&parameters=' + encodeURIComponent(param);
                });
            }
            window.location.href = url;
        }
    </script>
}
